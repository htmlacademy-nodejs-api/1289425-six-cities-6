{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start-rest": "npm run build && node ./dist/main.rest.js",
    "start:dev": "nodemon",
    "start:dev-old": "tsx ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "db-pull": "docker compose --file docker-compose.yml --env-file ./.env pull",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "tsx": "tsx",
    "cli:version": "tsx ./src/main.cli.ts --version",
    "cli:help": "tsx ./src/main.cli.ts",
    "cli:import": "tsx ./src/main.cli.ts --import ./src/mock/generate.tsv",
    "mock:server": "json-server ./src/mock/mock-server-data.json --port 3123",
    "cli:generate": "tsx ./src/main.cli.ts --generate 10 ./src/mock/generate.tsv http://localhost:3123/api"
  },
  "devDependencies": {
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "@types/convict": "6.1.4",
    "@types/convict-format-with-validator": "6.0.3",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "json-server": "0.17.3",
    "pino-pretty": "10.2.0",
    "nodemon": "3.0.1",
    "@types/express": "4.17.18",
    "@types/cors": "2.8.15"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "chalk": "^5.3.0",
    "tsx": "4.7.0",
    "dayjs": "1.11.10",
    "got": "14.0.0",
    "pino": "8.15.1",
    "dotenv": "16.3.1",
    "reflect-metadata": "0.1.13",
    "inversify": "6.0.1",
    "mongoose": "7.5.3",
    "@typegoose/typegoose": "11.5.0",
    "express": "4.18.2",
    "http-status-codes": "2.3.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "express-async-handler": "1.2.0",
    "jose": "4.15.4",
    "cors": "2.8.5"
  }
}
